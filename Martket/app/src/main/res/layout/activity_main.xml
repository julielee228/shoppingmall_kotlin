<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activityMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/marketTop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop='true'>

        <TextView
            android:id="@+id/marketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:paddingTop="8dp"
            android:text="PPI MARKET"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/cartIcon"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/cart" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menuList"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/marketTop">

        <TextView
            android:id="@+id/tvToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="투데이"
            android:textColor="#F65E5E" />

        <TextView
            android:id="@+id/tvRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="랭킹"
            android:textColor="#6D6767" />

        <TextView
            android:id="@+id/tvSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="할인"
            android:textColor="#6D6767" />

        <TextView
            android:id="@+id/tvFreeDeliver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="무료배송"
            android:textColor="#6D6767" />

        <TextView
            android:id="@+id/tvBeauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="뷰티"
            android:textColor="#6D6767" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvRecommendation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/menuList"
        android:paddingLeft="28dp"
        android:paddingTop="18dp"
        android:text="당신을 위한 추천"
        android:textColor="#000000"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="361dp"
        android:layout_below="@id/tvRecommendation"
        android:layout_alignBottom="@+id/tvRecommendation"
        android:layout_marginBottom="-361dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/romand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/romandImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/romand" />

                <CheckBox
                    android:id="@+id/romandCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="romand"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/romandPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="9700원"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/clio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/clioImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/clio" />

                <CheckBox
                    android:id="@+id/clioCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="clio"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/clioPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="32000원"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:visibility="visible">


        <Button
            android:id="@+id/goBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="40dp"
            android:background="#99F65E5E"
            android:fontFamily="sans-serif"
            android:shadowColor="#005E3131"
            android:text="구매하기"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/goBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="80dp"
            android:background="#99F65E5E"
            android:fontFamily="sans-serif"
            android:text="장바구니"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF" />

    </LinearLayout>
</RelativeLayout>
